<h1>New Application</h1>

<%= form_with url: "/applications", method: :post, html: { id: 'form' }, local: true do |form| %>
  
  <div class="form-field">
  <%= form.label :applicant_name %>
  <%= form.text_field :applicant_name %>
  </div>

  <div class="form-field">
  <%= form.label :address %>
  <%= form.text_field :address %>
  </div>

  <div class="form-field">
  <%= form.label :city %>
  <%= form.text_field :city %>
  </div>

  <div class="form-field">
  <%= form.label :state %>
  <%= form.text_field :state %>
  </div>

  <div class="form-field">
  <%= form.label :zip_code %>
  <%= form.text_field :zip_code %>
  </div>

  <div class="form-field">
  <%= form.label :description, "Description of why I would make a good home" %>
  <%= form.text_area :description %>
  </div>

  <div class="form-field">
  <%= form.submit "Submit" %>
  </div>
<% end %>